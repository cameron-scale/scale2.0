# Copy this file to `.env` and fill in your credentials.
# Backend server configuration
PORT=3001

# OpenAI API key for the ChatGPT integration. Obtain your key from
# https://platform.openai.com/account/api-keys and paste it here.
OPENAI_API_KEY=sk-your-openai-api-key

# QuickBooks Online API credentials
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_REDIRECT_URI=http://localhost:3001/api/quickbooks/callback

# Microsoft Graph credentials for Outlook and Calendar
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=
MS_REDIRECT_URI=http://localhost:3001/api/graph/callback

# Salesforce connected app credentials
SF_CLIENT_ID=
SF_CLIENT_SECRET=
SF_USERNAME=
SF_PASSWORD=
SF_TOKEN=

# Converge Pay credentials
CONVERGE_MERCHANT_ID=
CONVERGE_USERNAME=
CONVERGE_PASSWORD=

# Zoom JWT or OAuth credentials
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_REDIRECT_URI=http://localhost:3001/api/zoom/callback

# Additional services can be configured below
